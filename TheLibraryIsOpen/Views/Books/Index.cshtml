@model List<TheLibraryIsOpen.Models.DBModels.Book>
@{
    ViewData["Title"] = "Book";
    

    int numberOfBooks = Model.Count;

    string message = numberOfBooks.ToString();

    if (numberOfBooks < 2)
    {
        message += " Book";
    }
    else
    {
        message += " Books";
    }
    message += " found from TheLibraryIsOpen database";

    var style = "";
}

<h2>@ViewData["Title"]</h2>
<h3>@message</h3>

<p>
    <a asp-controller="Books" asp-action="Create" class="btn btn-info"><label class="glyphicon glyphicon-plus"></label>&nbsp; Create New</a>
</p>

@if (numberOfBooks != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Format
                </th>
                <th>
                    Pages
                </th>
                <th>
                    Publisher
                </th>
                <th>
                    Date
                </th>
                <th>
                    ISBN-10
                </th>
                <th>
                    ISBN-13
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var book in Model)
            {
              
            <tr style="@style">
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Format</td>
                <td>@book.Pages</td>
                <td>@book.Publisher</td>
                <td>@book.Date</td>
                <td>@book.Isbn10</td>
                <td>@book.Isbn13</td>
                <td>
                    <div class="">
                        <a asp-action="Edit" class="btn btn-sm btn-success" asp-route-id="@book.BookId"><label class="glyphicon glyphicon-edit"></label>&nbsp; Edit</a>
                        <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@book.BookId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@book.BookId"><label class="glyphicon glyphicon-trash"></label>&nbsp; Delete</a>
                    </div>
                </td>
            </tr>

            }
        </tbody>
    </table>
}
