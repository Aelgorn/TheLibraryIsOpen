@model List<TheLibraryIsOpen.Models.DBModels.Person>
@{
    ViewData["Title"] = "Person";

    int nb = Model.Count;

    string message = nb.ToString();

    if (nb < 2)
    {
        message += " Person";
    }
    else
    {
        message += " Person";
    }
    message += " found from TheLibraryIsOpen database";
}

<h2>@ViewData["Title"]</h2>
<h3>@message</h3>

<p>
    <a asp-controller="Person" asp-action="Create" class="btn btn-info"><label class="glyphicon glyphicon-plus"></label>&nbsp; Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Firstname
            </th>
            <th>
                Lastname
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <div class="">
                        <a asp-controller="Person" asp-action="Edit" class="btn btn-sm btn-success" asp-route-id="@item.PersonId"><label class="glyphicon glyphicon-edit"></label>&nbsp; Edit</a>
                        <a asp-controller="Person" asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.PersonId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a>
                        <a asp-controller="Person" asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.PersonId"><label class="glyphicon glyphicon-trash"></label>&nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
