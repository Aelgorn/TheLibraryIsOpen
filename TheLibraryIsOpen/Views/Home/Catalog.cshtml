@using TheLibraryIsOpen.Controllers.StorageManagement
@using TheLibraryIsOpen.Models.DBModels
@model TheLibraryIsOpen.Models.CatalogViewModel
@{
    ViewData["Title"] = "Catalog";
    await Html.RenderPartialAsync("_Card");

    <style type="text/css">
        td {
            width: 100px;
        }
    </style>

    <h3>Books</h3>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Date</th>
            <th></th>
        </tr>
        @foreach (var book in Model.book) { 
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Date</td>
                <td><a asp-controller="Books" asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@book.BookId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a></td>
            </tr>
        }
    </table>


    <h3>Magazines</h3>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Date</th>
            <th></th>
        </tr>
        @foreach (var magazine in Model.magazine)
        {
            <tr>
                <td>@magazine.Title</td>
                <td>@magazine.Publisher</td>
                <td>@magazine.Date</td>
                <td><a asp-controller="Magazine" asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@magazine.MagazineId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a></td>
            </tr>
        }
    </table>

    <h3>Movies</h3>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Runtime</th>
            <th>Release Date</th>
            <th></th>
        </tr>
        @foreach (var movie in Model.movie)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.RunTime</td>
                <td>@movie.ReleaseDate</td>
                <td><a asp-controller="Movie" asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@movie.MovieId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a></td>
            </tr>
        }
    </table>

    <h3>Music</h3>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Release Date</th>
            <th></th>
        </tr>
        @foreach (var music in Model.music)
        {
            <tr>
                <td>@music.Title</td>
                <td>@music.Artist</td>
                <td>@music.ReleaseDate</td>
                <td><a asp-controller="Music" asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@music.MusicId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a></td>
            </tr>
        }
    </table>
}


