@model List<TheLibraryIsOpen.Models.DBModels.Magazine>
@{
    ViewData["Title"] = "Magazine";

    int nb = Model.Count;

    string message = nb.ToString();

    if (nb < 2)
    {
        message += " Magazine";
    }
    else
    {
        message += " Magazines";
    }
    message += " found from TheLibraryIsOpen database";
}

<h2>@ViewData["Title"]</h2>
<h3>@message</h3>

<p>
    <a asp-action="Create" class="btn btn-info"><label class="glyphicon glyphicon-plus"></label>&nbsp; Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Publisher
            </th>
            <th>
                Language
            </th>
            <th>
                Date
            </th>
            <th>
                Isbn10
            </th>
            <th>
                Isbn13
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn10)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn13)
                </td>
                <td>
                    <div class="">
                        <a asp-action="Edit" class="btn btn-sm btn-success" asp-route-id="@item.MagazineId"><label class="glyphicon glyphicon-edit"></label>&nbsp; Edit</a>
                        <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.MagazineId"><label class="glyphicon glyphicon-list"></label>&nbsp; Details</a>
                        <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.MagazineId"><label class="glyphicon glyphicon-trash"></label>&nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
